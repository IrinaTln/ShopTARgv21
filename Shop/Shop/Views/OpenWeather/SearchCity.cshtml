@model Shop.Models.OpenWeather.OpenWeatherSearchCityViewModel

<form method="post">
    <div class="from-group col-md-offset-5 col-md-5">
        <h2>Search current weather in the city</h2>
        <label asp-for="CityName" style="font-family: Arial"></label>
        <input asp-for="CityName" class="form-control" />
        <span asp-validation-for="CityName" class="text-danger"></span>
    </div>
    <div class="container">
        <div class="form-group col-md-offset-3 col-md-5">
            <button asp-controller="OpenWeather" asp-action="SearchCity" class="btn-primary">Search</button>
        </div>
    </div>

</form>
