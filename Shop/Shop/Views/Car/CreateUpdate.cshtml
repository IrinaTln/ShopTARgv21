@model Shop.Models.Car.CarEditViewModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />

        <div class="form-group row">
            <label asp-for="OwnerName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="OwnerName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="VINCode" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="VINCode" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="NumberOfRegistration" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NumberOfRegistration" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Brand" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Brand" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Model" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Model" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Color" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Color" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Fuel" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Fuel" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Capacity" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Capacity" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="NumberOfCarDoors" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NumberOfCarDoors" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="NumberOfPassangersWithDriver" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NumberOfPassangersWithDriver" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="CarWeight" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CarWeight" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="BuildOfDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="BuildOfDate" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DateOfRegistration" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="DateOfRegistration" class="form-control" />
            </div>
        </div>


        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="car" type="submit" class="btn btn-primary" value="Update" />
        }
        else
        {
            <input asp-action="create" asp-controller="car" type="submit" class="btn btn-primary" value="Create" />
        }

        <a asp-action="Index" class="btn btn-primary">Index</a>

    </form>
</div> 